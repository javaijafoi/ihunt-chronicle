rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // --- NEW CAMPAIGN ARCHITECTURE HELPERS ---
    
    function isCampaignMember(campaignId) {
      return isSignedIn() && exists(/databases/$(database)/documents/campaigns/$(campaignId)/members/$(request.auth.uid));
    }

    function isCampaignGM(campaignId) {
      // Check if member doc exists AND role is 'gm'
      let memberPath = /databases/$(database)/documents/campaigns/$(campaignId)/members/$(request.auth.uid);
      return isSignedIn() && exists(memberPath) && get(memberPath).data.role == 'gm';
    }

    // --- CAMPAIGNS & SUBCOLLECTIONS ---

    match /campaigns/{campaignId} {
      // Allow read if signed in (for joining via code or listing)
      // Ideally restrict list to "my campaigns", but "get" needs to be open for joining.
      allow read: if isSignedIn();
      
      allow create: if isSignedIn() && request.resource.data.gmId == request.auth.uid;
      allow update: if isCampaignGM(campaignId) && request.resource.data.gmId == resource.data.gmId;
      allow delete: if isCampaignGM(campaignId);

      match /members/{memberId} {
        // Members can read the member list
        allow read: if isCampaignMember(campaignId) || (isSignedIn() && request.auth.uid == memberId);
        
        // Joining: User creates their own member record
        allow create: if isSignedIn() && request.auth.uid == memberId;
        
        // Updating: GM can update roles, User can update their own config (e.g. selected character)
        allow update: if isCampaignGM(campaignId) || request.auth.uid == memberId;
        
        // Deleting: GM can kick, User can leave
        allow delete: if isCampaignGM(campaignId) || request.auth.uid == memberId;
      }
    }

    // --- ROOT LEVEL COLLECTIONS LINKED BY campaignId ---

    // Seasons
    match /seasons/{seasonId} {
      allow read: if isCampaignMember(resource.data.campaignId);
      allow create: if isCampaignGM(request.resource.data.campaignId);
      allow update, delete: if isCampaignGM(resource.data.campaignId);
    }

    // Stories
    match /stories/{storyId} {
      allow read: if isCampaignMember(resource.data.campaignId);
      allow create: if isCampaignGM(request.resource.data.campaignId);
      allow update, delete: if isCampaignGM(resource.data.campaignId);
    }

    // Episodes
    match /episodes/{episodeId} {
      allow read: if isCampaignMember(resource.data.campaignId);
      allow create: if isCampaignGM(request.resource.data.campaignId);
      allow update, delete: if isCampaignGM(resource.data.campaignId);
    }

    // Scenes (New Schema)
    match /scenes/{sceneId} {
      allow read: if isCampaignMember(resource.data.campaignId);
      allow create: if isCampaignGM(request.resource.data.campaignId);
      allow update, delete: if isCampaignGM(resource.data.campaignId);
    }

    // Active NPCs (New Schema)
    match /activeNpcs/{npcId} {
       allow read: if isCampaignMember(resource.data.campaignId);
       allow create: if isCampaignGM(request.resource.data.campaignId);
       allow update, delete: if isCampaignGM(resource.data.campaignId);
    }
    
    // Tokens (New Schema)
    match /tokens/{tokenId} {
       allow read: if isCampaignMember(resource.data.campaignId);
       allow create: if isCampaignGM(request.resource.data.campaignId);
       // GM can update any token. Players can update their own Character tokens (movement).
       allow update: if isCampaignGM(resource.data.campaignId) 
          || (isCampaignMember(resource.data.campaignId) && resource.data.type == 'character' && resource.data.ownerId == request.auth.uid);
       allow delete: if isCampaignGM(resource.data.campaignId);
    }

    // --- CHARACTERS (Hybrid / Migration) ---
    // Characters are root level. New chars have campaignId. Old chars have sessionId.
    match /characters/{characterId} {
      // New Logic: Check campaignId
      allow read: if isSignedIn() && (
         (resource.data.campaignId != null && isCampaignMember(resource.data.campaignId)) ||
         (resource.data.sessionId != null && canAccessSession(resource.data.sessionId))
      );

      allow create: if isSignedIn() && (
         (request.resource.data.campaignId != null && isCampaignMember(request.resource.data.campaignId)) ||
         (request.resource.data.sessionId != null && canAccessSession(request.resource.data.sessionId))
      );
      
      allow update, delete: if isSignedIn() && (
         // Campaign Logic
         (resource.data.campaignId != null && (resource.data.userId == request.auth.uid || isCampaignGM(resource.data.campaignId))) ||
         // Legacy Session Logic
         (resource.data.sessionId != null && (resource.data.createdBy == request.auth.uid || isSessionGm(resource.data.sessionId)))
      );
    }

    // --- LEGACY SESSION LOGIC (Keep for now) ---

    function sessionSnapshot(sessionId) {
      return get(/databases/$(database)/documents/sessions/$(sessionId));
    }

    function sessionData(sessionId) {
      let session = sessionSnapshot(sessionId);
      return session.data != null ? session.data : {};
    }

    function sessionExists(sessionId) {
      return exists(/databases/$(database)/documents/sessions/$(sessionId));
    }

    function isSessionGm(sessionId) {
      let session = sessionSnapshot(sessionId);
      return isSignedIn() && session.data != null && session.data.gmId == request.auth.uid;
    }

    function isInvitedToSession(sessionId) {
      let data = sessionData(sessionId);
      return isSignedIn() && (
        (data.allowedUserIds != null && data.allowedUserIds.hasAny([request.auth.uid])) ||
        (data.invitedUserIds != null && data.invitedUserIds.hasAny([request.auth.uid])) ||
        (data.playerIds != null && data.playerIds.hasAny([request.auth.uid]))
      );
    }

    function hasSessionPresence(sessionId) {
      return isSignedIn() && exists(/databases/$(database)/documents/sessions/$(sessionId)/presence/$(request.auth.uid));
    }

    function canAccessSession(sessionId) {
      return isSessionGm(sessionId) || hasSessionPresence(sessionId);
    }

    match /sessions/{sessionId} {
      allow create: if isSignedIn()
        && (request.resource.data.gmId == null
          || request.resource.data.gmId == ''
          || request.resource.data.gmId == request.auth.uid);

      allow read: if canAccessSession(sessionId);

      allow update, delete: if canAccessSession(sessionId);

      match /presence/{userId} {
        allow read: if canAccessSession(sessionId);

        allow create: if isSignedIn()
          && sessionExists(sessionId)
          && request.resource.data.keys().hasAll(['ownerId', 'characterId'])
          && request.resource.data.ownerId == userId
          && request.resource.data.characterId is string
          && request.resource.data.characterId != ''
          && (isSessionGm(sessionId)
            || (request.auth.uid == userId && isInvitedToSession(sessionId)));

        allow update, delete: if isSignedIn()
          && sessionExists(sessionId)
          && ((request.auth.uid == userId && isInvitedToSession(sessionId) && hasSessionPresence(sessionId))
            || isSessionGm(sessionId));
      }

      // Legacy Subcollections (Only GM can write usually in VTT, except Tokens)
      match /scenes/{sceneId} {
        allow read: if canAccessSession(sessionId);
        allow create, update, delete: if isSessionGm(sessionId);
      }
      
      // Note: Archetypes was global or subcollection? Previous rules had it here.
      match /archetypes/{archetypeId} {
        allow read: if canAccessSession(sessionId);
        allow create, update, delete: if isSessionGm(sessionId);
      }

      match /activeNpcs/{activeNpcId} {
        allow read: if canAccessSession(sessionId);
        allow create, update, delete: if isSessionGm(sessionId);
      }

      match /tokens/{tokenId} {
        allow read: if canAccessSession(sessionId);
        allow create, delete: if isSessionGm(sessionId);
        allow update: if isSessionGm(sessionId) 
          || (isSignedIn() && resource.data.ownerId == request.auth.uid && resource.data.type == 'character');
      }
    }
  }
}
