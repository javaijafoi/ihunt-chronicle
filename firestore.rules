rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function sessionSnapshot(sessionId) {
      return get(/databases/$(database)/documents/sessions/$(sessionId));
    }

    function sessionData(sessionId) {
      let session = sessionSnapshot(sessionId);
      return session.data != null ? session.data : {};
    }

    function sessionExists(sessionId) {
      return exists(/databases/$(database)/documents/sessions/$(sessionId));
    }

    function isSessionGm(sessionId) {
      let session = sessionSnapshot(sessionId);
      return isSignedIn() && session.data != null && session.data.gmId == request.auth.uid;
    }

    function isInvitedToSession(sessionId) {
      let data = sessionData(sessionId);
      return isSignedIn() && (
        (data.allowedUserIds != null && data.allowedUserIds.hasAny([request.auth.uid])) ||
        (data.invitedUserIds != null && data.invitedUserIds.hasAny([request.auth.uid])) ||
        (data.playerIds != null && data.playerIds.hasAny([request.auth.uid]))
      );
    }

    function hasSessionPresence(sessionId) {
      return isSignedIn() && exists(/databases/$(database)/documents/sessions/$(sessionId)/presence/$(request.auth.uid));
    }

    function canAccessSession(sessionId) {
      return isSessionGm(sessionId) || hasSessionPresence(sessionId);
    }

    match /characters/{characterId} {
      allow read: if isSignedIn()
        && resource.data.sessionId != null
        && canAccessSession(resource.data.sessionId);

      allow create: if isSignedIn()
        && request.resource.data.sessionId != null
        && canAccessSession(request.resource.data.sessionId);

      allow update, delete: if isSignedIn()
        && resource.data.sessionId != null
        && canAccessSession(resource.data.sessionId)
        && (resource.data.createdBy == request.auth.uid || isSessionGm(resource.data.sessionId));
    }

    match /sessions/{sessionId} {
      allow create: if isSignedIn()
        && (request.resource.data.gmId == null
          || request.resource.data.gmId == ''
          || request.resource.data.gmId == request.auth.uid);

      allow read: if canAccessSession(sessionId);

      allow update, delete: if canAccessSession(sessionId);

      match /presence/{userId} {
        allow read: if canAccessSession(sessionId);

        allow create: if isSignedIn()
          && sessionExists(sessionId)
          && request.resource.data.keys().hasAll(['ownerId', 'characterId'])
          && request.resource.data.ownerId == userId
          && request.resource.data.characterId is string
          && request.resource.data.characterId != ''
          && (isSessionGm(sessionId)
            || (request.auth.uid == userId && isInvitedToSession(sessionId)));

        allow update, delete: if isSignedIn()
          && sessionExists(sessionId)
          && ((request.auth.uid == userId && isInvitedToSession(sessionId) && hasSessionPresence(sessionId))
            || isSessionGm(sessionId));
      }

      // Scenes subcollection - only GM can write
      match /scenes/{sceneId} {
        allow read: if canAccessSession(sessionId);
        allow create, update, delete: if isSessionGm(sessionId);
      }

      // Monsters subcollection - only GM can write
      match /monsters/{monsterId} {
        allow read: if canAccessSession(sessionId);
        allow create, update, delete: if isSessionGm(sessionId);
      }

      // Tokens subcollection - GM can write, players can update their own character tokens
      match /tokens/{tokenId} {
        allow read: if canAccessSession(sessionId);
        allow create, delete: if isSessionGm(sessionId);
        allow update: if isSessionGm(sessionId) 
          || (isSignedIn() && resource.data.ownerId == request.auth.uid && resource.data.type == 'character');
      }

      // NPCs subcollection - only GM can write
      match /npcs/{npcId} {
        allow read: if canAccessSession(sessionId);
        allow create, update, delete: if isSessionGm(sessionId);
      }
    }
  }
}
