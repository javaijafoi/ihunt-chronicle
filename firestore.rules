rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function sessionSnapshot(sessionId) {
      return get(/databases/$(database)/documents/sessions/$(sessionId));
    }

    function sessionExists(sessionId) {
      return exists(/databases/$(database)/documents/sessions/$(sessionId));
    }

    function isSessionGm(sessionId) {
      let session = sessionSnapshot(sessionId);
      return isSignedIn() && session.data != null && session.data.gmId == request.auth.uid;
    }

    function hasSessionPresence(sessionId) {
      return isSignedIn() && exists(/databases/$(database)/documents/sessions/$(sessionId)/presence/$(request.auth.uid));
    }

    function canAccessSession(sessionId) {
      return isSessionGm(sessionId) || hasSessionPresence(sessionId);
    }

    match /characters/{characterId} {
      allow read: if isSignedIn()
        && resource.data.sessionId != null
        && canAccessSession(resource.data.sessionId);

      allow create: if isSignedIn()
        && request.resource.data.sessionId != null
        && canAccessSession(request.resource.data.sessionId);

      allow update, delete: if isSignedIn()
        && resource.data.sessionId != null
        && canAccessSession(resource.data.sessionId)
        && (resource.data.createdBy == request.auth.uid || isSessionGm(resource.data.sessionId));
    }

    match /sessions/{sessionId} {
      allow create: if isSignedIn()
        && (request.resource.data.gmId == null
          || request.resource.data.gmId == ''
          || request.resource.data.gmId == request.auth.uid);

      allow read: if canAccessSession(sessionId)
        || (isSignedIn()
          && (sessionId == 'sessao-principal'
            || sessionSnapshot(sessionId).data == null
            || !sessionSnapshot(sessionId).data.keys().hasAny(['gmId'])
            || sessionSnapshot(sessionId).data.gmId == null));

      allow update, delete: if canAccessSession(sessionId);

      match /presence/{userId} {
        allow read: if canAccessSession(sessionId);

        allow create: if isSignedIn()
          && sessionExists(sessionId)
          && request.resource.data.oderId == userId
          && (request.auth.uid == userId || isSessionGm(sessionId));

        allow update, delete: if isSignedIn()
          && (request.auth.uid == userId || isSessionGm(sessionId))
          && canAccessSession(sessionId);
      }
    }
  }
}
